<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Articles</title>
</head>
<body>
  <a href="/users/articles/new"><button type="button">New Article</button></a>
  <h3>Listing articles</h3>
  <br>
  <% if (articles.length > 0) { %>
    <% articles.forEach(article => {%>
      <h3><%= article.articlename %></h3>
      <p><% article.description %></p>
      <p>Author name : <%= article.author.firstname %></p>
      <a href="/users/articles/<%= article._id %>">Show</a> | <a href="/users/articles/<%= article._id %>/edit">Edit</a> | <a href="/users/articles/delete/<%= article._id %>"><button type="button">Delete</button></a>
      <br>
    <% })%>
  <% } else { %>
    <p>no articles</p>
  <% }%>
</body>
</html>